<%= simple_form_for(@project) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.select :status, Project::STATUS %>
    <%= f.association :developer, prompt: "Choose a developer" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'button' %>
  </div>
<% end %>
